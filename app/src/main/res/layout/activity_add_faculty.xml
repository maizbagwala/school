<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFaculty">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/pb_addfaculty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_profile_add_f"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:contentDescription="click to select image"
                        android:scaleType="centerCrop"
                        android:tint="#FFFFFF"
                        android:background="@drawable/imgback"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="2dp"
                        tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/phototext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_profile_add_f"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="click box to select photo" />

                <EditText
                    android:id="@+id/Fname_addFaculty"
                    style="@style/my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phototext"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="First Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/Lname_addFaculty"
                    style="@style/my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Fname_addFaculty"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="Last Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/address_addFaculty"
                    style="@style/my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Lname_addFaculty"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="Address"
                    android:singleLine="false" />

                <EditText
                    android:id="@+id/email_addFaculty"
                    style="@style/my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address_addFaculty"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="email"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/phone_addFaculty"
                    style="@style/my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_addFaculty"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="phone"
                    android:inputType="phone" />


                <EditText
                    android:id="@+id/dob_addFaculty"
                    style="@style/my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phone_addFaculty"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="DOB"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/password_addFaculty"
                    style="@style/my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dob_addFaculty"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="password"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/add_addFaculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password_addFaculty"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="40dp"
                    android:background="@color/colorPrimary"
                    android:text="A d d   f a c u l t y"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>