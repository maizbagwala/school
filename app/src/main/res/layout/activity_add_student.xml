<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginBottom="10dp"
       android:elevation="10dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
<!--           <Spinner-->
<!--               android:id="@+id/std_spinner"-->
<!--               android:layout_width="match_parent"-->
<!--               android:layout_height="wrap_content"-->
<!--               android:layout_marginTop="20dp"-->
<!--               style="@style/my"-->
<!--               android:layout_marginHorizontal="20dp"-->
<!--               />-->

           <EditText
               android:id="@+id/Fname_addStudent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="textPersonName"
               android:hint="First Name"
               style="@style/my"
               android:layout_marginTop="10dp"
               android:layout_marginHorizontal="20dp" />

           <EditText
               android:id="@+id/Lname_addStudent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="textPersonName"
               android:hint="Last Name"
               style="@style/my"
               android:layout_marginTop="10dp"
               android:layout_marginHorizontal="20dp"
               android:layout_below="@id/Fname_addStudent"/>

           <EditText
               android:id="@+id/rollNO_addStudent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Roll no"
               style="@style/my"
               android:layout_marginTop="10dp"
               android:layout_marginHorizontal="20dp"
               android:layout_below="@id/Lname_addStudent"/>

           <EditText
               android:id="@+id/address_addStudent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Address"
               android:singleLine="false"
               style="@style/my"
               android:layout_marginTop="10dp"
               android:layout_marginHorizontal="20dp"
               android:layout_below="@id/rollNO_addStudent"/>

           <EditText
               android:id="@+id/email_addStudent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="email"
               android:inputType="textEmailAddress"
               style="@style/my"
               android:layout_marginTop="10dp"
               android:layout_marginHorizontal="20dp"
               android:layout_below="@id/address_addStudent"/>

           <EditText
               android:id="@+id/phone_addStudent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="phone"
               style="@style/my"
               android:inputType="phone"
               android:layout_marginTop="10dp"
               android:layout_marginHorizontal="20dp"
               android:layout_below="@id/email_addStudent"/>


           <EditText
               android:id="@+id/dob_addStudent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="DOB"
               android:inputType="date"
               style="@style/my"
               android:layout_marginTop="10dp"
               android:layout_marginHorizontal="20dp"
               android:layout_below="@id/phone_addStudent"/>

           <Button
               android:id="@+id/add_addStudent"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_marginBottom="40dp"
               android:textAllCaps="true"
               android:background="@color/colorPrimary"
               android:textColor="@color/white"
               android:text="A d d   s t u d e n t"
               android:layout_below="@id/dob_addStudent"/>

       </RelativeLayout>
   </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>